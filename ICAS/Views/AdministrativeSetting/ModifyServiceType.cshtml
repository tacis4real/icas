@using WebCribs.MVCHelperLibrary
@model ICASStacks.APIObjs.ClientChurchServiceDetailObj



<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">@Model.Name</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "approveClientChurchServiceType", data_parsley_validate = "" }))
            {

                @Html.HiddenFor(m => m.ChurchServiceTypeRefId)
                @Html.HiddenFor(m => m.DayOfWeekId)
                @Html.HiddenFor(m => m.DayOfWeek)
                @Html.HiddenFor(m => m.WeekDays)

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <label>Church Service Name</label>
                    <input placeholder="Church Service Type" name="Name" id="Name" class="form-control" required="" value="@Model.Name">
                </div>
                
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <br/>
                    <label>Week Days</label>
                    @Html.RadioButtonListFor("MyWeekDayIds", @Html.GetTabRoleListByIds(model => model.MyWeekDayIds, Model.WeekDays), 6, WebCribs.MVCHelperLibrary.Utilities.RepeatedDirection.Vertical)
                </div>
                
                <div class="col-md-12 col-sm-12 col-xs-12" style="margin-top: 10px; text-align: right">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>

            }

        </div>
    </div>
</div>



<script>
    $(document).ready(function (e) {
        $('#approveClientChurchServiceType').parsley().on('field:validated', function () {
            var ok = $('.parsley-error').length === 0;
            $('.bs-callout-danger').toggleClass('hidden', ok);

        });

    });
</script>