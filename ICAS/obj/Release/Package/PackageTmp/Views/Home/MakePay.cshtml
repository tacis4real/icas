<body>

    <div class="account-pages"></div>
    <div class="clearfix"></div>
    

    <div class="wrapper-pay-page">

        <div class="text-center m-t-20">
            <div class="logo">
                <img src="~/Images/logo-ultima.png" width="60" height="60">
            </div>
        </div>


        <div class="account-bg">
            <div class="card-box mb-0">

                <div class="m-t-10 p-20">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h6 class="text-muted m-b-0 m-t-0">Make Pledge</h6>
                        </div>
                    </div>
                    
                    
                    @using (Html.BeginForm(null, null, FormMethod.Post, new {id = "makePayForm", data_parsley_validate = ""}))
                    {
                        
                        <div class="form-group row">
                            <label class="col-lg-3 control-label " for="ChurchId">Denomination (Church)</label>
                            <div class="col-lg-9">
                                <select id="ClientPaySelectForChurch" name="ChurchId" class="form-control" style="width: 100%" required="" data-parsley-required-message="Parent Church is required"></select>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-lg-3 control-label " for="StateOfLocationId">Church Location</label>
                            <div class="col-lg-9">
                                <select id="ClientPaySelectForStateOfLocation" name="StateOfLocationId" class="form-control" style="width: 100%" required="" data-parsley-required-message="State of location is required"></select>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-lg-3 control-label " for="FullName">Full Name</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="FullName" name="FullName" value="@Model.FullName" type="text" required="">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-lg-3 control-label " for="PhoneNumber">Phone Number</label>
                            <div class="col-lg-4">
                                <input class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" type="text" required="">
                            </div>
                            
                            <label class="col-lg-1 control-label " for="Email">Email</label>
                            <div class="col-lg-4">
                                <input class="form-control" id="Email" name="Email" value="@Model.Email" type="text">
                            </div>
                        </div>
                        
                        
                        <div class="form-group row">
                            @*<label class="col-lg-3 control-label " for="StateOfLocationId">Collection</label>
                            <div class="col-lg-4">
                                <select id="ClientPaySelectForStateOfLocation" name="StateOfLocationId" class="form-control" style="width: 100%" required="" data-parsley-required-message="State of location is required"></select>
                            </div>*@
                            
                            <label class="col-lg-3 control-label " for="Amount">Amount</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="Amount" name="Amount" value="@Model.Amount" type="number" min="0" required="">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div>
                                    <br />
                                    <button type="submit" class="btn btn-block btn-lg btn-success waves-effect waves-light">Submit</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <!-- end card-box-->

        <div class="m-t-20">
            <div class="text-center">
                <p class="text-white">God Bless As You Do So! <a href="pages-login.html" class="text-white m-l-5"><b>Amen</b> </a></p>
            </div>
        </div>

    </div>
    <!-- end wrapper page -->


